@using ExampleBank.Web.Models.Transactions.Responses;
@model IEnumerable<GetTransactionsByAccountResponseModel>
@{
    ViewData["Title"] = "Transaction histories";
}

<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th>Date</th>
            <th>IBAM</th>
            <th>Type</th>
            <th>Amount</th>
            <th>Fee</th>
            <th>Balance</th>
            <th>Description</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TransDate.ToString("yyyy-MM-dd HH:mm:ss")</td>
            <td>@item.IBAN</td>
            <td>@item.TransactionType</td>
            <td>@item.Amount.ToString("n4")</td>
            <td>@item.Fee.ToString("n4")</td>
            <td>@item.Balance.ToString("n4")</td>
            <td>@item.Description</td>
        </tr>
    }
</table>
