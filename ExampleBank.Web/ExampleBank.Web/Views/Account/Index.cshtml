@using ExampleBank.Web.Models.Accounts.Responses;
@model ResultModel<IEnumerable<AccountInfoResponseModel>>
@{
    ViewData["Title"] = "Account Info";
}

@if (!Model.Success)
{
    <div class="alert alert-danger" role="alert">
        @Model.Message
    </div>
}

<div class="pb-2">
    <a type="button" class="btn btn-sm btn-outline-dark"
       asp-controller="Account"
       asp-action="Create">
        Add Account
    </a>
</div>

<table class="table table-hover">
    <thead>
        <tr class="table-light">
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model.Result)
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>
                <a class="btn btn-sm btn-link" asp-controller="Account"
               asp-action="Update" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
    }
</table>